{% extends 'base.html.twig' %}

{% block title %} Trouver des joueurs {% endblock %}

{% block body %}
    <div class="locate-page">
        <h1>Trouve des joueurs proche de toi !</h1>
        {% if app.user.latitude and app.user.longitude %}
            <p>Ici tu peux retrouver des joueurs HulaHopien proche de chez toi.</p>
            <p>Ajoute les en amis pour d√©couvrir leurs jeux et organiser des parties ensemble !</p>
            <div id="map"></div>
        {% else %}
            <div class="container">
                <p>Pour que tu puisses trouver des joueurs proches, il faut nous indiquer ton adresse :</p>
                {{ form_start(addressForm) }}
                <div class="input">
                    {{ form_row(addressForm.address) }}
                </div>
                <div class="input">
                    {{ form_row(addressForm.postalCode) }}
                </div>
                <div class="input">
                    {{ form_row(addressForm.city) }}
                </div>
                <button class="btn">OK</button>
                <p>Promis on l'utilise que pour la carte !</p>
                {{ form_end(addressForm) }}
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/locate') }}
{% endblock %}