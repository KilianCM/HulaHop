{% extends 'base.html.twig' %}

{% block title %}{{ user.name }}{% endblock %}
{% block body %}
    <h1>Editer mon profil</h1>
    <div class="registration-page">
        {{ form_start(editProfileForm) }}
        {{ form_row(editProfileForm.email) }}
        {{ form_row(editProfileForm.name) }}
        {{ form_row(editProfileForm.address) }}
        {{ form_row(editProfileForm.postalCode) }}
        {{ form_row(editProfileForm.city) }}
        <button class="btn">Editer le profil</button>

        {{ form_end(editProfileForm) }}

    </div>



{% endblock %}